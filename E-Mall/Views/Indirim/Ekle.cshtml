@using E_Mall.Models;
@model Indirim
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form id="Indirim-Ekle-Form" action=@(Model == null ? "/Indirim/Olustur" : "/Indirim/Guncelleme") method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-xl-12" style="margin-top: 20px">
            <h4> İNDİRİM EKLE</h4>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12">
            <div style="border: 1px solid #000000; padding: 20px; margin-top: 20px; border-radius: 10px;">
                <div class="row">
                    <div class="col-md-6 ">
                        <input id="txt_id" type="hidden" value="-1" />
                        @Html.TextBoxFor(x => x.Adi, new { @class = "form-control", @placeholder = "İndirim Adı Giriniz", required = "required", style = "margin-top:25px" })

                        @Html.TextBoxFor(x => x.TutarOrani, new { @class = "form-control", @placeholder = "İndirim Tutarı Giriniz", required = "required", style = "margin-top:30px" })

                        @*Html.DropDownListFor(x => x., (SelectList)ViewBag.kategoris, "-Kategori Seciniz-", new { @class = "form-control", required = "required" })*@
                    </div>
                    <div class="col-md-6">
                        <label for="name">Başlangıç Tarihi</label>
                        @Html.TextBoxFor(x => x.BaslangicTarih, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })

                        <label for="name">Bitiş Tarihi</label>
                        @Html.TextBoxFor(x => x.BitisTarih, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                </div>
                <div class="col-xl-12">
                    <p align="center" style="margin-top: 20px"><button class="btn btn-success">Kaydet</button></p>
                </div>
            </div>
        </div>
    </div>
</form>