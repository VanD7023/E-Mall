@using E_Mall.Models
@model List<Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="app-content container center-layout mt-2">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <form id="Arama-Form" action="#" method="#">
                                @Html.TextBox("aranan", null, new { @class = "form-control", @placeholder = "Aranan", style = "display:inline-block" })
                                <button class="btn btn-success">Arama</button>
                            </form>
                        </div>
                        <div class="col-6">
                            <div style="float:right">
                                <a class="btn btn-outline-info" href=@Url.Action("Index","Kategori") role="button">Yenile</a>
                                <a class="btn btn-outline-info" href=# role="button">Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration" id="datatable">
                            <thead>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Yayınlanan</th>
                                    <th>Görüntüleme Sayısı</th>
                                    <th>Düzenleme</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Kategori item in Model)
                                {
                                    <tr>
                                        <td>@item.Adi</td>
                                        <td>2</td>
                                        <td>3</td>
                                        <td>  <a class="btn btn-outline-secondary" href=# role="button">Düzenle</a></td>
                                        <td>  <a class="btn btn-outline-danger" href="#" role="button">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>