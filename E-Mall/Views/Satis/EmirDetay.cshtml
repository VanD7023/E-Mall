@using E_Mall.Models;
@model Satis
@{
    ViewBag.Title = "EmirDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="Guncelle-Form" action= "/Satis/Guncelleme"  method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.ID)
    <div class="row">
        <div class="col-xl-12">
            <h4> EMİR DETAY </h4>
        </div>
        <div class="col-xl-12">
            <p align="right"> </p>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12">
            <div style="border: 1px solid #000000; padding: 20px; border-radius: 10px; margin-right: 20px">
                <div class="row">
                    <div class="col-md-4">
                        <label for="name">Müşteri Adı:</label>
                        <label for="name">@Model.Kullanici.Adi</label>
                    </div>
                    <div class="col-md-4">
                        <label for="name">Müşteri Mail:</label>
                        <label for="name">@Model.Kullanici.Email</label>
                    </div>
                    <div class="col-md-4">
                        <label for="name">Teslimat Adresi:</label>
                        <label for="name">@Model.Adres.AcikAdres</label>
                    </div>
                </div>
                <p></p>
                <div class="row">
                    <div class="col-md-6">
                        <label for="name">Sipariş Durumu</label>
                        @Html.DropDownListFor(x => x.SatisDurumID, (SelectList)ViewBag.satisDurums, "-Seçiniz-", new { @class = "form-control", required = "required", style = "width: 250px; padding: 5px; margin: 10px;" })
                    </div>
                    <div class="col-md-6">
                        <p><label for="name" style="margin:10px ">Kargo Takip No:</label>@Html.TextBoxFor(x => x.KargoKod, new { @class = "form-control", @placeholder = "Arama", required = "required" })</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12">
            <p></p>
            <p align="center">
                <button class="btn btn-success" name="submit">Kaydet</button>
            </p>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12">
            <table class="table table-striped table-bordered zero-configuration" id="datatable">
                <thead>
                    <tr>
                        <th>Ürün Kodu</th>
                        <th>Ürün Adı</th>
                        <th>Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SatisDetay item in Model.satisDetay)
                    {
                        <tr>
                            <td>@item.Urun.Barkod</td>
                            <td>@item.Urun.Adi</td>
                            <td>@item.Adet</td>                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

