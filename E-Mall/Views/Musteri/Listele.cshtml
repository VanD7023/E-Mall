@using E_Mall.Models
@model  Musteri

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <h4> MÜŞTERİLER </h4>
        <form id="Musteri-Arama-Form" action="/Musteri/Arama" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <div style="border: 1px solid #000000; padding: 20px; border-radius: 10px; margin-right: 20px">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="name">İsim :</label>
                                @Html.TextBoxFor(x => x.Adi, new { @class = "form-control", @placeholder = "Müsteri Adını Giriniz" })
                            </div>
                            <div class="col-md-6">
                                <label for="name">Soyisim:</label>
                                @Html.TextBoxFor(x => x.Soyadi, new { @class = "form-control", @placeholder = "Müsteri Soyadını Giriniz" })
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="name">Kullanıcı Adı:</label>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adını Giriniz" })
                            </div>
                            <div class="col-md-6">
                                <label for="name">E-Posta:</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Müsteri E-Posta Giriniz" })
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top : 30px;">
                            <p align="center">
                                <button class="btn btn-success">Arama</button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
        <div class="col-xl-12 col-lg-12 col-md-12" style="padding:20px;">
            <table class="table table-striped table-bordered zero-configuration" id="datatable">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>E-Posta</th>
                        <th>Kullanıcı Adı</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Musteri item in (List<Musteri>)ViewBag.musteriler)
                    {
                        <tr>
                            <td>@item.Adi</td>
                            <td>@item.Soyadi</td>
                            <td>@item.Email</td>
                            <td>@item.UserName</td>
                            <td><a class="btn btn-outline-info" href=@Url.Action("Sil","Musteri", new { ID = item.ID }) role="button">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>



